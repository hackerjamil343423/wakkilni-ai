# Frontend URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Neon PostgreSQL
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# Cloudflare R2
R2_UPLOAD_IMAGE_ACCESS_KEY_ID=your_r2_access_key_id
R2_UPLOAD_IMAGE_SECRET_ACCESS_KEY=your_r2_secret_access_key
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
R2_UPLOAD_IMAGE_BUCKET_NAME=images

# Auth
BETTER_AUTH_SECRET=your_auth_secret_here

# Google OAuth (for user authentication)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Google Ads API Configuration
# Get these from: https://developers.google.com/google-ads/api/docs/get-started/oauth-cloud-project
GOOGLE_ADS_CLIENT_ID=your_google_ads_client_id
GOOGLE_ADS_CLIENT_SECRET=your_google_ads_client_secret

# Google Ads Developer Token
# Apply for a developer token at: https://ads.google.com/aw/apicenter
GOOGLE_ADS_DEVELOPER_TOKEN=your_developer_token_here

# Google Ads Login Customer ID (Manager Account ID)
# This is the customer ID of your manager account (without dashes)
GOOGLE_ADS_LOGIN_CUSTOMER_ID=1234567890

# Payments (Polar)
POLAR_ACCESS_TOKEN=your_polar_access_token
POLAR_SUCCESS_URL=/success?checkout_id={CHECKOUT_ID}
POLAR_WEBHOOK_SECRET=your_polar_webhook_secret

# Subscriptions
NEXT_PUBLIC_STARTER_TIER=your_starter_tier_id
NEXT_PUBLIC_STARTER_SLUG=starter

# OpenAI API Key (for chat features)
OPENAI_API_KEY=your_openai_api_key
